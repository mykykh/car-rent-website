        <script>
            const popular_btn = document.querySelector('#popular-car-button')
            const small_btn = document.querySelector('#small-car-button')
            const big_btn = document.querySelector('#big-car-button')
            const exclusive_btn = document.querySelector('#exclusive-car-button')

            const popular_cars = document.querySelectorAll('.popular-car')
            const small_cars = document.querySelectorAll('.small-car')
            const big_cars = document.querySelectorAll('.big-car')
            const exclusive_cars = document.querySelectorAll('.exclusive-car')

            popular_btn.addEventListener('click', () => {
                makeActive(popular_btn)
                makeInActive(small_btn)
                makeInActive(big_btn)
                makeInActive(exclusive_btn)
                show(popular_cars)
                hide(small_cars)
                hide(big_cars)
                hide(exclusive_cars)
            })

            small_btn.addEventListener('click', () => {
                makeActive(small_btn)
                makeInActive(popular_btn)
