            })

            big_btn.addEventListener('click', () => {
                makeActive(big_btn)
                makeInActive(popular_btn)
                makeInActive(small_btn)
                makeInActive(exclusive_btn)
                show(big_cars)
                hide(popular_cars)
                hide(small_cars)
                hide(exclusive_cars)
            })

            exclusive_btn.addEventListener('click', () => {
                makeActive(exclusive_btn)
                makeInActive(popular_btn)
                makeInActive(small_btn)
                makeInActive(big_btn)
                show(exclusive_cars)
                hide(popular_cars)
                hide(small_cars)
                hide(big_cars)
            })

            function makeActive(button) {
                button.classList.add('car-button-active')
            }

            function makeInActive(button) {
                button.classList.remove('car-button-active')
            }

            function show(cards) {
                cards.forEach((card) => {
                    card.classList.remove('display-none')
                })
            }

            function hide(cards) {
                cards.forEach((card) => {
                    card.classList.add('display-none')
                })
            }
        </script>
